{
    "compilerOptions": {
      "incremental": true,
      "target": "es2020",
      // "module": "ESNext",   // Usa ES Modules
      "module": "CommonJS",    // Middy de ESNext a CommonJS
      "declaration": true,
      "sourceMap": true,
      "composite": true,
      "strict": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "preserveConstEnums": true,
      "resolveJsonModule": true,
      "allowJs": true,
      "allowSyntheticDefaultImports": true // Permite importar CommonJS con default
    },
    "include": [
      "src/**/*.ts"
    ]
  }